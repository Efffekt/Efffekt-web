---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/home/Hero.astro';
import Products from '../components/home/Products.astro';
import Portfolio from '../components/home/Portfolio.astro';
import Scanner from '../components/home/Scanner.astro';
import FAQ from '../components/home/FAQ.astro';
import Team from '../components/home/Team.astro';
import Contact from '../components/home/Contact.astro';
---

<BaseLayout
  title="EFFFEKT | Digitale systemer på abonnement fra 500 kr/mnd"
  description="Nettside, integrasjon, plugin eller AI-automatisering på abonnement. Ingen bindingstid, alt inkludert. Prøv gratis."
>
  <Hero />
  <Team />
  <Products />
  <Portfolio />
  <Scanner />
  <FAQ />
  <Contact />
</BaseLayout>

<script>
  function initHomePage() {
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

    // Smooth scroll
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function(e) {
        e.preventDefault();
        const href = (e.currentTarget as HTMLAnchorElement).getAttribute('href');
        if (href) {
          const target = document.querySelector(href);
          if (target) {
            target.scrollIntoView({ behavior: prefersReducedMotion ? 'auto' : 'smooth', block: 'start' });
            document.querySelector('.nav-links')?.classList.remove('active');
            document.querySelector('.nav-toggle')?.classList.remove('active');
          }
        }
      });
    });

    // Scroll reveal animations
    const revealElements = document.querySelectorAll(
      '.reveal, .reveal-scale, .reveal-left, .reveal-right, .reveal-mask, .reveal-stagger, .reveal-hero, .reveal-elegant, .split-words, .first-section-reveal, .text-underline-draw'
    );

    const revealOnScroll = () => {
      const windowHeight = window.innerHeight;
      revealElements.forEach(el => {
        const elementTop = el.getBoundingClientRect().top;
        const revealPoint = windowHeight * 0.85;
        if (elementTop < revealPoint) {
          el.classList.add('visible');
        }
      });
    };

    window.addEventListener('scroll', revealOnScroll, { passive: true });
    revealOnScroll();
  }

  initHomePage();
  document.addEventListener('astro:page-load', initHomePage);
</script>
