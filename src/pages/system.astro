---
import ServiceLayout from '../layouts/ServiceLayout.astro';
import Icon from '../components/icons/Icon.astro';

const faqItems = [
  {
    question: "Hva koster et skreddersydd system?",
    answer: "Fra 649 kr/mnd med alt inkludert - utvikling, hosting, vedlikehold og support. Ingen bindingstid, avslutt når du vil."
  },
  {
    question: "Hvor lang tid tar utvikling?",
    answer: "Et typisk system tar 4-8 uker fra start til ferdig. Du får en fungerende demo innen 2 uker, slik at du kan se retningen før du betaler noe."
  },
  {
    question: "Kan dere integrere med eksisterende systemer?",
    answer: "Ja! Vi har erfaring med å koble på regnskapssystemer, e-post, kalendere, betalingsløsninger og andre verktøy bedriften din allerede bruker."
  },
  {
    question: "Er det bindingstid?",
    answer: "Nei, ingen bindingstid. Du kan avslutte når som helst. Vi tror på å levere verdi hver måned, ikke låse deg inne i lange kontrakter."
  },
  {
    question: "Hva er inkludert i prisen?",
    answer: "Alt du trenger: Utvikling, hosting, SSL, vedlikehold, sikkerhetsoppdateringer, backup og support. Du trenger ikke tenke på noe teknisk."
  }
];
---

<ServiceLayout
  title="Skreddersydd System | Fra 649 kr/mnd | EFFFEKT"
  description="Skreddersydde systemløsninger for norske bedrifter. Slutt på Excel-kaos. Kundeoversikt, automatisering og full kontroll. Ingen bindingstid."
  canonical="https://efffekt.no/system"
  serviceName="Skreddersydd System"
  serviceDescription="Skreddersydde systemløsninger for norske bedrifter. Kundeoversikt, automatisering, PDF-generering og dashboard."
  price="44900"
  faqItems={faqItems}
>
  <!-- Hero Section -->
  <section class="service-hero">
    <div class="container">
      <div class="service-hero-content reveal">
        <h1>Slutt på <span class="gradient-text">Excel-kaos</span></h1>
        <p class="service-hero-subtitle">Få alt på ett sted. Kundeoversikt, automatiske påminnelser, og full kontroll - uten å tape oversikten.</p>
        <div class="service-hero-prices">
          <div class="price-box featured">
            <span class="price-label">Skreddersydd system</span>
            <span class="price-amount">Fra 649 kr/mnd</span>
            <span class="price-alt">Ingen bindingstid, alt inkludert</span>
          </div>
        </div>
        <a href="#kontakt" class="btn btn-primary btn-large">
          <Icon name="comments" size={16} /> Book gratis samtale
        </a>
      </div>
    </div>
  </section>

  <!-- What's Included -->
  <section class="service-details">
    <div class="container">
      <div class="section-header reveal">
        <h2>Hva du <span class="gradient-text">får</span></h2>
      </div>
      <div class="included-grid reveal">
        <div class="included-item">
          <div class="included-icon"><Icon name="users" size={24} /></div>
          <h3>Kunde- og prosjektoversikt</h3>
          <p>All informasjon samlet på ett sted. Søk, filtrer og finn det du trenger raskt.</p>
        </div>
        <div class="included-item">
          <div class="included-icon"><Icon name="bell" size={24} /></div>
          <h3>Automatiske varsler</h3>
          <p>Påminnelser for forfall, oppgaver og viktige datoer. Aldri glem noe igjen.</p>
        </div>
        <div class="included-item">
          <div class="included-icon"><Icon name="file-pdf" size={24} /></div>
          <h3>PDF-generering</h3>
          <p>Lag rapporter, fakturaer og dokumenter med ett klikk.</p>
        </div>
        <div class="included-item">
          <div class="included-icon"><Icon name="mobile-alt" size={24} /></div>
          <h3>Mobilvennlig dashboard</h3>
          <p>Full tilgang fra mobil og nettbrett. Jobb fra hvor som helst.</p>
        </div>
        <div class="included-item">
          <div class="included-icon"><Icon name="user-lock" size={24} /></div>
          <h3>Brukerinnlogging og roller</h3>
          <p>Gi ansatte tilgang til det de trenger. Administrator, bruker, kun lesning.</p>
        </div>
        <div class="included-item">
          <div class="included-icon"><Icon name="plug" size={24} /></div>
          <h3>Integrasjoner</h3>
          <p>Koble på e-post, kalender, regnskap og andre verktøy du allerede bruker.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="faq-section">
    <div class="container">
      <div class="section-header reveal">
        <h2>Vanlige <span class="gradient-text">spørsmål</span></h2>
      </div>
      <div class="faq-list reveal">
        {faqItems.map(item => (
          <div class="faq-item">
            <button class="faq-question" >
              <span>{item.question}</span>
              <Icon name="chevron-down" size={16} />
            </button>
            <div class="faq-answer">
              <p>{item.answer}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Contact Form -->
  <section id="kontakt" class="contact-section">
    <div class="container">
      <div class="contact-grid">
        <div class="contact-text reveal-left">
          <h2>Klar for et <span class="gradient-text">nytt system?</span></h2>
          <p>Ta kontakt for en uforpliktende samtale. Vi svarer innen 24 timer.</p>
          <div class="contact-trust">
            <div class="trust-item">
              <Icon name="gift" size={16} />
              <span>Gratis demo først</span>
            </div>
            <div class="trust-item">
              <Icon name="check-circle" size={16} />
              <span>Ingen bindingstid</span>
            </div>
            <div class="trust-item">
              <Icon name="gift" size={16} />
              <span>Alt inkludert i prisen</span>
            </div>
          </div>
        </div>
        <div class="contact-form-wrapper reveal-right">
          <form class="contact-form" action="https://formsubmit.co/sander@efffekt.no" method="POST">
            <input type="hidden" name="_cc" value="daniel@efffekt.no,michael@efffekt.no">
            <input type="hidden" name="_subject" value="Forespørsel: Skreddersydd System">
            <input type="hidden" name="_captcha" value="false">
            <input type="hidden" name="_template" value="table">
            <input type="text" name="_honey" style="display:none" tabindex="-1" autocomplete="off">
            <div class="form-group">
              <label for="name">Navn *</label>
              <input type="text" id="name" name="name" required placeholder="Ditt navn">
            </div>
            <div class="form-group">
              <label for="email">E-post *</label>
              <input type="email" id="email" name="email" required placeholder="din@epost.no">
            </div>
            <div class="form-group">
              <label for="message">Fortell kort om behovet</label>
              <textarea id="message" name="message" rows="3" placeholder="Hva slags system trenger du?"></textarea>
            </div>
            <button type="submit" class="btn btn-primary btn-large btn-full">
              <Icon name="paper-plane" size={16} /> Send forespørsel
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- Other Services -->
  <section class="other-services">
    <div class="container">
      <div class="section-header reveal">
        <h2>Andre <span class="gradient-text">tjenester</span></h2>
      </div>
      <div class="other-services-grid reveal">
        <a href="/nettside" class="other-service-card">
          <Icon name="globe" size={24} />
          <h3>Profesjonell nettside</h3>
          <span class="other-price">Fra 549 kr/mnd</span>
        </a>
        <a href="/ai" class="other-service-card">
          <Icon name="robot" size={24} />
          <h3>AI-automatisering</h3>
          <span class="other-price">Fra 999 kr/mnd</span>
        </a>
      </div>
    </div>
  </section>
</ServiceLayout>
