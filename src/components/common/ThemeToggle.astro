---
// Theme toggle component with system preference support
import Icon from '../icons/Icon.astro';
---

<button
  class="theme-toggle"
  id="theme-toggle"
  aria-label="Bytt tema"
  title="Bytt mellom lyst og mÃ¸rkt tema"
>
  <span class="theme-icon-light"><Icon name="sun" size={16} /></span>
  <span class="theme-icon-dark"><Icon name="moon" size={16} /></span>
</button>

<style>
  .theme-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    cursor: pointer;
    transition: all 0.3s var(--ease-out);
    position: relative;
  }

  .theme-toggle:hover {
    border-color: var(--border-light);
    transform: scale(1.05);
  }

  .theme-icon-light,
  .theme-icon-dark {
    position: absolute;
    color: var(--text-secondary);
    transition: all 0.3s var(--ease-out);
  }

  /* Dark theme (default) - show sun icon */
  .theme-icon-light {
    opacity: 1;
    transform: rotate(0deg);
  }

  .theme-icon-dark {
    opacity: 0;
    transform: rotate(-90deg);
  }

  /* Light theme - show moon icon */
  :global([data-theme="light"]) .theme-icon-light {
    opacity: 0;
    transform: rotate(90deg);
  }

  :global([data-theme="light"]) .theme-icon-dark {
    opacity: 1;
    transform: rotate(0deg);
  }
</style>

<script>
  function getSystemTheme(): string {
    return window.matchMedia('(prefers-color-scheme: light)').matches ? 'light' : 'dark';
  }

  function initTheme() {
    const savedTheme = localStorage.getItem('theme');
    if (savedTheme) {
      document.documentElement.setAttribute('data-theme', savedTheme);
    } else {
      // Use system preference as default
      const systemTheme = getSystemTheme();
      if (systemTheme === 'light') {
        document.documentElement.setAttribute('data-theme', 'light');
      }
      // Dark is default (no attribute needed)
    }
  }

  function toggleTheme() {
    const currentTheme = document.documentElement.getAttribute('data-theme');
    const newTheme = currentTheme === 'light' ? 'dark' : 'light';

    document.documentElement.setAttribute('data-theme', newTheme);
    localStorage.setItem('theme', newTheme);
  }

  // Listen for system theme changes (only if user hasn't set a preference)
  function handleSystemThemeChange(e: MediaQueryListEvent) {
    const savedTheme = localStorage.getItem('theme');
    if (!savedTheme) {
      const newTheme = e.matches ? 'light' : 'dark';
      if (newTheme === 'light') {
        document.documentElement.setAttribute('data-theme', 'light');
      } else {
        document.documentElement.removeAttribute('data-theme');
      }
    }
  }

  // Initialize on page load
  initTheme();

  // Listen for system preference changes
  window.matchMedia('(prefers-color-scheme: light)').addEventListener('change', handleSystemThemeChange);

  // Re-initialize on View Transitions
  document.addEventListener('astro:page-load', () => {
    initTheme();
    document.getElementById('theme-toggle')?.addEventListener('click', toggleTheme);
  });

  // Also handle initial page load
  document.getElementById('theme-toggle')?.addEventListener('click', toggleTheme);
</script>
